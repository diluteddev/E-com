<section>
  <div class="container mt-5">
    <div class="row">
      {{#each products }}
      <div class="col-md-3 p-3">
        <div class="card" style="width: 15rem; height: 29rem;">
          <img class="card-img-top" src="/product-images/{{this._id}}.jpg" alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <h6 class="product-price">â‚¹ {{this.price}} </h6>
            <p class="card-text">{{this.Description}} </p>
            <button onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</section>
